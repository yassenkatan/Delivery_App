<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %> 
<body>
    <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-dark p-4">
          <h5 class="text-white h4">Delivery App</h5>
          <a class="text-white h6" href="/">Home</a>
          <a class="text-white h6" href="/user_dashboard">Dashboard</a>
          <a class="text-white h6" href="/API/auth/logout">Logout</a>
        </div>
      </div>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </nav>
    <h1>My Address</h1><br><hr><br>
    <div class="container">
        <form action="/API/address/del_address" method="post">
            <table class="table table-dark">
                <colgroup span="5" class="columns"></colgroup>
                <tr>
                    <th>Name</th>
                    <th>City</th>
                    <th>Street</th>
                    <th>Location Details</th>
                    <th>Del</th>
                </tr>
                <% for (var i = 0; i<all_addresses.length; i++) { %>
                <tr>
                        <td><%= all_addresses[i].name %></td>
                        <td><%= all_addresses[i].city %></td>
                        <td><%= all_addresses[i].street %></td>
                        <td><%= all_addresses[i].locationDetails %></td>
                        <input type="hidden" name="id" value="<%= all_addresses[i]._id%>">
                        <td><input type="submit" value="X" class="btn btn-danger"></td>
                        </tr>
                        <% } %>
                </table>
            </form>
    </div>
    
    
</body>
<%- include('partials/footer') %> 
</html>