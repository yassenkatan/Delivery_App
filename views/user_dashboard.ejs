<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> 
<body>
    <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-dark p-4">
          <h5 class="text-white h4">Delivery App</h5>
          <a class="text-white h6" href="/">Home</a>
          <a class="text-white h6" href="/API/address/all_addresses">My Address</a>
          <a class="text-white h6" href="/API/auth/logout">Logout</a>

        </div>
      </div>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </nav>
    <div >
        <h2>User Information:</h2><br>
        <div class="container mx-auto">
            <% for(let i=0;i<userInfo.length;i++){ %> 
        <div class="col g-10">
                <div class="col"><label for="fullname" class="col-sm-2 col-form-label">Photo : </label>    
            <img src="./<%=userInfo[i].photo%>" alt="" ><br></div>
                <div class="col"><label for="fullname" class="col-sm-2 col-form-label">FullName : </label>
            <h4><%= userInfo[i].fullname %> </h4></div>
                <div class="col"><label for="fullname" class="col-sm-2 col-form-label">Email : </label>
            <h4><%= userInfo[i].email %> </h4></div>
        </div>
        <div class="col g-10">
                <div class="col"><label for="birthday" class="col-sm-2 col-form-label">Birthday : </label>
            <h4><%= userInfo[i].birthday %> </h4></div>
                <div class="col"><label for="country" class="col-sm-2 col-form-label">Country : </label>
            <h4><%= userInfo[i].country %> </h4></div>
                <div class="col"><label for="gender" class="col-sm-2 col-form-label">Gender : </label>
            <h4><%= userInfo[i].gender %> </h4></div>
        </div>
        <div class="col g-10">
                <label for="phoneNumber" class="form-label">Phone Number : </label>
            <h4><%= userInfo[i].phoneNumber %> </h4>
        </div>
            <% } %> 
        </div>
    <div><hr>
    <h2>Update User:</h2>
    <div class="container mx-auto">
    <form action="/API/auth/upd_usr" method="POST" enctype="multipart/form-data" class="col g-10 ">
                <% for(let i=0;i<userInfo.length;i++){ %> 
            <div class="col"><label for="validationDefault01"class="col-sm-2 col-form-label">FullName : </label>
                <input type="text" id="validationDefault01"
                name="fullname" value="<%= userInfo[i].fullname %>  " class="form-control"><br></div>
            <div class="col"><label for="validationDefault01"class="col-sm-2 col-form-label">Birthday : </label>
                <input type="date" id="validationDefault01"
                name="birthday" value="<%= userInfo[i].birthday %>" class="form-control"><br></div>    
            <div class="col"><label for="validationDefault01"class="col-sm-2 col-form-label">Country : </label>
                <input type="text" id="validationDefault01" 
                name="country" value="<%= userInfo[i].country %>" class="form-control"><br></div>    
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">Gender : </label>
                <select name="gender" id="validationDefault01" class="form-control">
                    <option value="male" selected>Male</option>
                    <option value="female">Female</option>
                </select><br></div>    
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">Phone Number : </label>
                <input type="number" id="validationDefault01" 
                    name="phoneNumber" value="<%= userInfo[i].phoneNumber %>" class="form-control"><br></div>    
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">Photo : </label>
                <input type="file" id="User" 
                    name="User" class="form-control" id="validationDefault01"><br></div>    
                <input type="submit" value="Update" class="btn btn-primary mb-3">
        <% } %> 
    </form>
</div>
    </div><br><hr>
<h2>Add New Address</h2>
<div class="container mx-auto">
    <form action="/API/address/add_address" method="POST" class="col g-10">
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">Name : </label>
            <input type="text" id="validationDefault01" 
                name="name" class="form-control"><br></div>
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">City : </label>
            <input type="text" id="validationDefault01"
                name="city" class="form-control"><br></div>    
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">Street : </label>
            <input type="text" id="validationDefault01"
                name="street" class="form-control"><br></div>    
            <div class="col"><label for="validationDefault01" class="col-sm-2 col-form-label">Location Details : </label><br>
                <textarea name="locationDetails" id="validationDefault01" cols="50" rows="10" class="form-control"></textarea><br></div>    
                <input type="submit" value="Add New Address" class="btn btn-primary mb-3">
                
    </form>
</div>
</body>
<%- include('partials/footer') %> 
</html>